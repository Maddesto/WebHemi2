                ->appendStylesheet('/resources/common/css/library/material.min.css')
                ->appendStylesheet('/resources/theme/' . $this->theme . '/css/login.css');

$js        = $this->headScript()->appendScript('var THEME_NAME = \'' . $this->theme . '\';' . PHP_EOL .
