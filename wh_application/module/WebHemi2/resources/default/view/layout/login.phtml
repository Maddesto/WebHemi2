    <head>
        <meta charset="utf-8">
        <meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
<?php
    echo "\t\t" . $headTitle . PHP_EOL;
    echo "\t\t" . $css . PHP_EOL;
?>
    </head>
    <body>
        <div id="loginForm">
            <h1><?php echo $this->loginTitle; ?></h1>
            <?php echo $form; ?>
        </div>
